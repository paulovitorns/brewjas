<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TxtTitleForms" parent="android:style/TextAppearance">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="NameBeer" parent="android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="NameBrewer" parent="android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OtherInfosBeer" parent="android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="OtherDelaisBeer" parent="android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="TxtBtn" parent="android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="TxtBtnSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="TxtHint">
        <item name="android:fontFamily">Arial</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:textColorHint">@color/colorMarrom</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="TextTitleHelpLogin">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextHelpLogin">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">Arial</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSubHelpLogin">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorMarrom</item>
        <item name="android:fontFamily">Arial</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>

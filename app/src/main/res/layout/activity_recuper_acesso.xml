<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_cadastro"
    tools:context="br.com.brewjas.ui.activity.RegistroActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="57dp"
        android:background="@drawable/bg_transparent_yellow">

        <LinearLayout
            android:id="@+id/contentPanel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_horizontal_margin"
            android:background="@drawable/style_rounded_box_form"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/txt_intro_recuperar"
                style="@style/TxtTitleForms"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/edtLogin"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    style="@style/TxtHint"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hint_email"
                    android:background="@drawable/rounded_edt_padrao"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/btn_recuperar"
                    style="@style/TxtBtn"
                    android:id="@+id/btnEnviar"
                    android:background="@drawable/rounded_btn_padrao"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="68dp">

    </include>


</RelativeLayout>

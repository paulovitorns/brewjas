<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimaryDark"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@drawable/beer_example"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorMarrom"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:weightSum="3">

                <TextView
                    android:id="@+id/varAbv"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="ABV 5,8%"
                    style="@style/OtherInfosBeer"/>

                <TextView
                    android:id="@+id/varIbu"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="IBU 50"
                    style="@style/OtherInfosBeer"/>

                <TextView
                    android:id="@+id/varIbu2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="IBU 50"
                    style="@style/OtherInfosBeer"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:padding="@dimen/activity_vertical_margin"
                android:layout_weight="4"
                android:background="@color/colorMarromEdt">

                <TextView
                    android:id="@+id/nameBrewer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brewer: {{Guinness}}"
                    style="@style/NameBrewer"/>

                <TextView
                    android:id="@+id/nameCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PaÃ­s: {{Irlanda}}"
                    style="@style/OtherDelaisBeer"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/typeBeer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estilo: {{Classic Irish-Style Dry Stout}}"
                    style="@style/OtherDelaisBeer"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/glassBeer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Servido em um: {{Pint XYZ}}"
                    style="@style/OtherDelaisBeer"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@color/colorMarromEdt">

                <TextView
                    android:id="@+id/descBeer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="{{Descricao da breja}}"
                    style="@style/OtherDelaisBeer"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin_small"
                android:layout_marginBottom="@dimen/activity_vertical_margin_small"
                android:padding="@dimen/activity_vertical_margin"
                android:background="@color/colorMarromEdt">

                <include layout="@layout/item_breja_relacionado"></include>

                <include layout="@layout/item_breja_relacionado"></include>

            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/colorBgLight"
    android:id="@+id/cnItem"
    android:weightSum="2">

    <LinearLayout
        android:id="@+id/cnImage"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/imBeer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/beer_example"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerInfos"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/view_bottom_divider_borwn"
        android:layout_weight="1.4"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin_small"
        android:paddingLeft="@dimen/card_horizontal_margin_small"
        android:paddingRight="@dimen/card_horizontal_margin_small">

        <TextView
            android:id="@+id/txBrewery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guinness"
            android:maxLines="3"
            style="@style/TextLarge.Bold.Brown"/>

        <TextView
            android:id="@+id/txCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_vertical_margin_space"
            android:text="Irlanda"
            style="@style/TextMedium.Regular.Brown"/>

        <TextView
            android:id="@+id/txCountBeer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_vertical_margin_space"
            android:text="@string/brewery_qty"
            style="@style/TextRegular.Regular.Brown"/>

        <TextView
            android:id="@+id/txCountStyles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/brewery_styles"
            style="@style/TextRegular.Regular.Brown"/>

    </LinearLayout>

</LinearLayout>
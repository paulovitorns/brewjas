<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_horizontal_margin"
    android:layout_marginRight="@dimen/card_horizontal_margin"
    android:layout_marginTop="@dimen/card_vertical_margin"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_top_card_view_bg_light">

        <LinearLayout
            android:id="@+id/containerHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/containerImage"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgBeer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/beer_example"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerInfos"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/nameBeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Guinness Draught"
                        style="@style/NameBeer"/>

                    <TextView
                        android:id="@+id/nameBrewer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Guinness"
                        style="@style/NameBrewer"/>

                    <TextView
                        android:id="@+id/nameCountry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Irlanda"
                        style="@style/OtherDelaisBeer"/>

                    <TextView
                        android:id="@+id/typeBeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Classic Irish-Style Dry Stout"
                        style="@style/OtherDelaisBeer"/>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/containerImgFav"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnFav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_favorite_border_white_36dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@id/containerInfos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_card_view_brown">

            <TextView
                android:id="@+id/varAbv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ABV 5,8%"
                style="@style/OtherInfosBeer"/>

            <TextView
                android:id="@+id/varIbu"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="IBU 50"
                style="@style/OtherInfosBeer"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
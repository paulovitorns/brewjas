<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.brewjas.ui.fragment.LoginFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBg"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/contentLogo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="40dp"
                android:src="@drawable/logo"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:id="@+id/contentAcesso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:id="@+id/contentEdt"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal">

                    <EditText
                        android:id="@+id/edtLogin"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        style="@style/TxtHint"
                        android:inputType="textEmailAddress"
                        android:hint="@string/hint_email"
                        android:background="@drawable/rounded_edt_padrao"/>

                    <EditText
                        android:id="@+id/edtSenha"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        style="@style/TxtHint"
                        android:inputType="textPassword"
                        android:hint="@string/hint_password"
                        android:background="@drawable/rounded_edt_padrao"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contentLogin"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/contentEdt"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/btn_login"
                        style="@style/TxtBtn"
                        android:id="@+id/btnLogin"
                        android:background="@drawable/rounded_btn_padrao"/>

                    <Button
                        android:layout_width="300dp"
                        android:layout_height="45dp"
                        android:layout_marginBottom="10dp"
                        android:text="@string/btn_login_fb"
                        style="@style/TxtBtn"
                        android:textColor="@color/colorWhite"
                        android:id="@+id/btnFacebook"
                        android:background="@drawable/rounded_btn_facebook"/>

                    <Button
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:text="@string/btn_help"
                        style="@style/TxtBtnSmall"
                        android:textColor="@color/colorMarrom"
                        android:id="@+id/btnRegistrar"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>

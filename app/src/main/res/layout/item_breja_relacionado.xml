<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@color/colorMarromEdt"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/containerHeader"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/containerImage"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgBeer"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/beer_example"
                    android:scaleType="centerCrop" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerInfos"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/nameBeer"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Guinness Draught"
                        style="@style/NameBeer"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/nameBrewer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Guinness"
                        style="@style/NameBrewer"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/typeBeer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Classic Irish-Style Dry Stout"
                        style="@style/OtherDelaisBeer"
                        android:textAlignment="center"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
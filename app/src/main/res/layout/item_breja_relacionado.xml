<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="170dp"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="@color/colorMarromEdt"
    android:gravity="center_vertical|center_horizontal"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/containerHeader"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/containerImage"
            android:layout_width="@dimen/beer_imagesize"
            android:layout_height="@dimen/beer_imagesize"
            android:gravity="center_vertical"
            android:layout_gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imBeer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_beer_example"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerInfos"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:gravity="center_vertical">


                <TextView
                    android:id="@+id/txBeer"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Guinness Draught"
                    style="@style/TextRegular.Bold.Brown.Center"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/txBrewery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guinness"
                    android:maxLines="2"
                    style="@style/TextSmall.Bold.Brown.Center"/>

                <TextView
                    android:id="@+id/txStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Classic Irish-Style Dry Stout"
                    android:maxLines="2"
                    style="@style/TextSmall.Regular.Brown.Center"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
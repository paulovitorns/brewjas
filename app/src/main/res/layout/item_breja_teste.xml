<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="@color/colorBgLight"
    android:layout_marginTop="5dp"
    android:id="@+id/container">

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/containerHeader"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/containerImage"
                android:layout_width="60dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/imgBeer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/beer_example"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/containerInfos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:gravity="center_vertical">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/nameBeer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp"
                            android:text="Guinness Draught"
                            style="@style/NameBeer"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp">

                        <TextView
                            android:id="@+id/nameBrewer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Guinness"
                            style="@style/NameBrewer"/>

                        <TextView
                            android:id="@+id/nameCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Irlanda"
                            style="@style/OtherDelaisBeer"/>

                        <TextView
                            android:id="@+id/typeBeer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Classic Irish-Style Dry Stout"
                            style="@style/OtherDelaisBeer"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/containerImgFav"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/btnFav"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/ic_favorite_border_white_48dp"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@id/containerInfos"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_bottom_card_view_brown">

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="ABV 5,8%"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="IBU 50"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:gravity="center_vertical|center_horizontal"/>

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>